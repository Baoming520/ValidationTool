<rules>
  <rule id="Common.Core.1002" category="core" requirementlevel="must" format="json" target="servicedoc">
    <description>JSON Service Document must starts with "d".</description>
    <action processor="jsonschema" >
      <jsonschema>
        {
        "type": "object",
        "additionalProperties" : false,
        "properties" : {
        "d": {

        }
        }
        }
      </jsonschema>
    </action>
    <errormessage>JSON Service Document must starts with "d".</errormessage>
  </rule>
</rules>