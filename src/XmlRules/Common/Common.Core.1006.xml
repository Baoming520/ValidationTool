<rules>
  <rule id="Common.Core.1006" category="core" requirementlevel="must" version="v2" format="json" target="feed">
    <description>DataServices Version 2.0 JSON Feed payload must be contained within "results".</description>
    <action processor="jsonschema" >
      <jsonschema>
        {
        "type": "object",
        "properties" : {
        "d": {
        "additionalProperties" : true,
        "type": "object",
        "properties" : {
        "results" : {
        "required" : true,
        "type": "any"
        }
        }
        }
        }
        }
      </jsonschema>
    </action>
    <errormessage>DataServices Version 2.0 JSON Feed payload must be contained within "results".</errormessage>
  </rule>
</rules>