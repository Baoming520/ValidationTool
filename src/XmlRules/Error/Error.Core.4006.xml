<rules>
  <rule id="Error.Core.4006" category="core" v4specificationsection ="19" version="v4" requirementlevel="may" format="JsonLight" target="error">
    <description>The error response object MAY contain name/value pair with the name target in V4.</description>
    <action processor="jsonschema" >
      <jsonschema>
        {
        "type" : "object",
        "additionalProperties" : true,
        "properties" : {
        "error" : {
        "additionalProperties" : true,
        "properties" : {
        "target" : { "type" : "any", "required" : true, },
        },
        },
        },
        }
      </jsonschema>
    </action>
    <errormessage>The error response object MAY contain name/value pair with the name target in V4.</errormessage>
  </rule>
</rules>
